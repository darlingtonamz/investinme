<h1>Welcome to Invest In Me</h1>

<% @campaigns.each do |c| %>
<div class="row">
	<div class="col-md-3 col-sm-6">
		<a href="<%= user_campaign_path(c.user, c) %>" class="donation-item">
			<figure><img src="<%= c.display_url %>" alt="//"></figure>
			<div class="content">
				<h4><%= c.name %></h4>
				<p><%= c.goal %></p>
			</div>
			<div class="foot">
				<span class="goal">Goal: GHs <%= c.cost %></span>
				<span class="grossed">Grossed</span>
				<div class="progress">
					<div class="progress-bar" title="$2.200" role="progressbar" style="width: 30%;"><span class="sr-only">90% Complete</span></div>
				</div>
				<!-- <span class="views"><i class="icon-eye"></i>957</span> -->
				<span class="people"><i class="icon-user"></i>432</span>
				<span class="time"><i class="icon-clock"></i><%= c.created_at %></span>
			</div>
		</a>
	</div>
	<%= link_to user_campaign_path(@user, c) do %>
	<!-- <li><%#= c.name %></li> -->
	<% end %>
	<% end %>
	<div class="container dnt-button"><a href="<%= new_user_campaign_path(@user) %>" class="btn btn-dark">New Campaign</a></div>
