<p id="notice"><%= notice %></p>

<h1>Listing Campaigns</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Goal</th>
      <th>Cost</th>
      <th>Execute Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.name %></td>
        <td><%= campaign.goal %></td>
        <td><%= campaign.cost %></td>
        <td><%= link_to 'View', campaign.upload_url %></td>
        <td><%= link_to 'Show', user_campaign_path(campaign.user, campaign) %></td>
        <td><%= link_to 'Edit', edit_user_campaign_path(campaign.user, campaign) %></td>
        <td><%= link_to 'Destroy', user_campaign_path(campaign.user, campaign), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Campaign', new_user_campaign_path(@user) %>
