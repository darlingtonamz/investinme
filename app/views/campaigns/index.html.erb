  <% @campaigns.each do |campaign| %>
    <div class="row">
    <div class="col-md-3 col-sm-6">
      <a href="<%= user_campaign_path(campaign.user, campaign) %>" class="donation-item">
        <figure><img src="<%= campaign.display_url %>" alt="//"></figure>
        <div class="content">
          <h4><%= campaign.name %></h4>
          <p><%= campaign.goal %></p>
        </div>
        <div class="foot">
          <span class="goal">Goal: GHs <%= campaign.cost %></span>
          <% @pay = Payment.find_by(campaign_id: campaign.id) %>
          <% @pay.amount %>
          <% sum = (@pay.amount.to_f/campaign.cost.to_f)*100 %>
          <span class="grossed">Grossed</span>
          <div class="progress">
            <div class="progress-bar" title="$2.200" role="progressbar" style="width: <%= sum %>%;"><span class="sr-only">90% Complete</span></div>
          </div>
          <!-- <span class="views"><i class="icon-eye"></i>957</span> -->
          <% @v = Payment.select("user_id").distinct.where(campaign_id: campaign.id) %>
          <span class="people"><i class="icon-user"></i><%= @v.count %></span>
          <span class="time"><i class="icon-clock"></i><%= campaign.created_at %></span>
        </div>
      </a>
    </div>
<% end %>
