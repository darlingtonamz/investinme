<%= form_for(@campaign) do |f| %>
  <% if @campaign.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@campaign.errors.count, "error") %> prohibited this campaign from being saved:</h2>

      <ul>
      <% @campaign.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :goal %><br>
    <%= f.text_area :goal %>
  </div>
  <div class="field">
    <%= f.label :cost %><br>
    <%= f.number_field :cost %>
  </div>
  <div class="field">
    <%= f.label "Executive Summary (pdf)" %><br>
    <%= f.file_field :upload %>
  </div>

  <div class="field">
    <%= f.select :category_ids, @categories.collect {|c| [ c.name, c.id ] }, {prompt: 'categories'}, {multiple: true} %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
